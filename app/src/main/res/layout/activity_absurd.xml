<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                style="@style/quesstionNumberStyle"
                android:text="@string/Question1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:layout_marginTop="10sp"
                android:text="@string/Question1Text"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/question1_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:padding="6sp"
                android:text="@string/trueAnswer" />

            <RadioButton
                android:id="@+id/question1_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:padding="6sp"
                android:text="@string/falseAnswer" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:orientation="vertical" />

            <TextView
                style="@style/quesstionNumberStyle"
                android:text="@string/Question2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:layout_marginTop="16sp"
                android:text="@string/Question2Text"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/question2_first_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6sp"
                android:text="@string/Question2FirstCheckbox"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/question2_second_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6sp"
                android:text="@string/Question2SecondCheckbox"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/question2_third_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6sp"
                android:text="@string/Question2ThirdCheckbox"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/question2_fourth_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6sp"
                android:text="@string/Question2FourthCheckbox"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:text="@string/Question3"
                style="@style/quesstionNumberStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:layout_marginTop="16sp"
                android:text="@string/Question3Text"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/question3_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/editTextHint"
                android:inputType="textCapWords"
                android:padding="6sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:text="@string/Question4"
                style="@style/quesstionNumberStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:layout_marginTop="16sp"
                android:text="@string/Question4Text"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/question4_first_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6sp"
                android:text="@string/Question4FirstCheckbox"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/question4_second_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6sp"
                android:text="@string/Question4SecondCheckbox"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/question4_third_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6sp"
                android:text="@string/Question4ThirdCheckbox"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/question4_fourth_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6sp"
                android:text="@string/Question4FourthCheckbox"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:text="@string/Question5"
                style="@style/quesstionNumberStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:layout_marginTop="16sp"
                android:text="@string/Question5Text"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/question5_answer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:padding="6sp"
                android:text="@string/question5Answer1" />

            <RadioButton
                android:id="@+id/question5_answer2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:padding="6sp"
                android:text="@string/Question5Answer2" />

            <RadioButton
                android:id="@+id/question5_answer3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:padding="6sp"
                android:text="@string/Question5Answer3" />

            <RadioButton
                android:id="@+id/question5_answer4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:padding="6sp"
                android:text="@string/Question5Answer4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:text="@string/Question6"
                style="@style/quesstionNumberStyle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16sp"
                android:layout_marginTop="16sp"
                android:text="@string/Question6Text"
                android:textAllCaps="true"
                android:textSize="16sp" />

            <RadioButton
                android:id="@+id/question6_true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:padding="6sp"
                android:text="@string/trueAnswer" />

            <RadioButton
                android:id="@+id/question6_false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRadioButtonClicked"
                android:padding="6sp"
                android:text="@string/falseAnswer" />

            <ImageButton
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center"
                android:layout_marginBottom="6dp"
                android:background="@null"
                android:onClick="resetScore"
                android:scaleType="fitCenter"
                android:src="@drawable/beckett" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>