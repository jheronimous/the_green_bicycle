<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <!-- This is the style for all text views that show the question numner throughout the app. -->
    <style name="questionNumberStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">10sp</item>
        <item name="android:layout_marginTop">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/questionNumberColor</item>
        <item name="android:fontFamily">@font/bungee_shade</item>
    </style>
    <!-- This is the style for all text views tat deal with the actual text of the questions. -->
    <style name="questionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16sp</item>
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/questionTextColor</item>
        <item name="android:fontFamily">@font/baumans</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!-- And we'll use this style for all radio buttons in the quiz. -->
    <style name="radioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6sp</item>
        <item name="android:textColor">@color/radioButtonColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/baumans</item>
    </style>
    <!-- Don't forget the checkboxes! For this here style is applied to all checkboxes in the app. -->
    <style name="checkBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/radioButtonColor</item>
        <item name="android:fontFamily">@font/baumans</item>
    </style>
    <!-- This is for the linear layout containers for each question. -->
    <style name="linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>
    <!-- Used to seperate different question text views. -->
    <style name="VerticalSeperator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
    </style>
    <!-- This is the style for any radio grouping. -->
    <style name="radioGroup">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- There's only one Beckett head and it's used to score the questions. This is th style for that head. -->
    <style name="beckettHead">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
    <!-- This is used for both the title and the h2 before scoring.. -->
    <style name="titleStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/fjord_one</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
    <!-- This is used for the one text entry page. -->
    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:padding">6sp</item>
    </style>
    <!-- This style is applied to the linear layout wrapper around all the questions and answers. -->
    <style name="topLevel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:paddingRight">6dp</item>
    </style>

</resources>
